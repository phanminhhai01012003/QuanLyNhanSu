<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Admin</title>
    @Styles.Render("~/Content/Admin/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Styles/Style.css" />
    @*<link rel="stylesheet" type="text/css" href="~/Styles/sb-admin-2.css" />*@

    <style type="text/css">
        .edit-row {
            margin-left: 0;
            margin-right: 10px;
            /* padding: 10px;*/
            height: 100%;
        }

        .active {
            background-color: #3978ad;
            color: #fff;
        }
    </style>

</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display (Hiển thị trên mobile tốt nhất)-->
            <div class="navbar-header">
                <button type="button" id="icon-menu-admin" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trang quản trị", "Index", "Admin", null, new { @class = "navbar-brand" })
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Admin <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="@Url.Action("ChangePassword","ChangePassword")" @Html.Raw(ViewBag.active == "Admin" ? "class = 'active'" : "")><i class="fa fa-exchange"></i>  Đổi mật khẩu</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> Tin nhắn</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i> Cài đặt</a>
                        </li>

                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("DangXuat", "Admin")"><i class="fa fa-fw fa-power-off"></i> Đăng xuất</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens
            Các mục menu thanh bên - Chúng thu gọn vào menu điều hướng phản hồi trên màn hình nhỏ-->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav" id="activeMenu">
                    <li>
                        <a href="@Url.Action("index","Admin")" @Html.Raw(ViewBag.active == "Admin" ? "class = 'active'" : "")><i class="fa fa-fw fa-dashboard"></i> Tổng quan</a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","QuanLyUser")" @Html.Raw(ViewBag.active == "QuanLyUser" ? "class = 'active'" : "")><i class="fa fa-fw fa-user"></i> Nhân Viên</a>
                    </li>
                    <li>
                        <a href="@Url.Action("index", "QuanLyPhongBan")" @Html.Raw(ViewBag.active == "QuanLyPhongBan" ? "class = 'active'" : "")><i class="fa fa-tasks"></i> Phòng ban</a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","QuanLyLuong")" @Html.Raw(ViewBag.active == "QuanLyLuong" ? "class = 'active'" : "")><i class="fa fa-money"></i> Lương nhân viên</a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","KhenThuong")" @Html.Raw(ViewBag.active == "KhenThuong" ? "class = 'active'" : "")><i class="fa fa-money"></i> Khen thưởng</a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","KyLuat")" @Html.Raw(ViewBag.active == "KyLuat" ? "class = 'active'" : "")><i class="fa fa-money"></i> Kỷ luật</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Admin</p>

            </footer>
        </div>

    </div>
    <div style="right: 0;
    position: fixed;
    bottom: 0;
    margin-bottom: 0;" id="bot">
        <a id="top" style="float:right;margin:10px" class="btn btn-danger">
            <span class="glyphicon glyphicon-arrow-up">
            </span>
        </a>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/datatable")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>

        //  $('#top').hide(500);
        $(window).on('scroll', function () {
            var scrollTop = $(window).scrollTop();
            if (scrollTop > 0) {
                $('#top').show(500);
                //$('#top').fadeIn(500);
            } else {
                //$('#top').fadeOut(500);
                $('#top').hide(500);
            }
        });

        $('#top').on('click', function (e) {
            $('html,body').animate({ scrollTop: 0 }, "slow");
        });
    </script>
</body>
</html>